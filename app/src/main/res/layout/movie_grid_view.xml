<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_movie_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/grid__movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_150sdp"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/grid__movie_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_180sdp"
        android:gravity="center"
        android:text="year"
        android:textSize="@dimen/_14sdp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/grid__movie_title"
        android:layout_alignLeft="@+id/grid__movie_title"
        android:layout_alignRight="@+id/grid__movie_title"
        android:layout_alignTop="@+id/grid__movie_title"
        android:layout_below="@+id/grid__movie_title"
        android:background="#8b0d0d0d" />
</RelativeLayout>