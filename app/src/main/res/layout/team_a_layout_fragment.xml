<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgrcrickcoreapp"
    android:padding="@dimen/_4sdp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Two players need to play...Click on Plus Below to enter openers Names "
        android:gravity="center"
        android:visibility="visible"
        android:background="@color/textappearence"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/_19sdp"
        android:padding="@dimen/_1sdp"
        android:layout_centerInParent="true"
        android:id="@+id/norecordsfound"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_team_a">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/icons_plusmathfilled" />

</RelativeLayout>